{
  "manifest_version" : 2,
  "name" : "Twitter Image DL",
  "short_name" : "Twi Img DL",
  "version" : "0.0.0",
  "description" : "Download original image in twitter.com. Downloaded image renames {userId}-{tweetId}-{0~3}",
  "icons" : {
    "16" : "icon/icon16.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "background" : {
    "scripts" : ["scripts/background.js"],
    "persistent" : false
  },
  "content_scripts":[
     {
          "matches" : [
              "*://twitter.com/*"
          ],
          "js":[
              "scripts/getImageInfo.js",
              "scripts/jquery-3.3.1.min.js"
          ]
      }
  ],
  "permissions" : [
    "tabs",
    "contextMenus",
    "downloads",
    "*://twitter.com/*"
  ]
}
