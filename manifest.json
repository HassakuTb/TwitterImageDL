{
  "manifest_version" : 2,
  "name" : "Twitter Image DL",
  "short_name" : "Twi Img DL",
  "version" : "0.0.0",
  "description" : "Download original image in twitter.com. Downloaded image renames {userId}-{tweetId}-{0~3}",
  "icons" : {
    "16" : "icon/icon16.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "background" : {
    "scripts" : ["scripts/background.js"],
    "persistent" : false
  },
  "page_action" : {
    "default_icon" : {
      "19" : "icon/icon19.png"
    },
    "defalt_title" : "Twitter Image DL",
    "default_popup" : "popup.html"
  },
  "permissions" : [
    "tabs",
    "contextMenus",
    "downloads"
  ]
}
